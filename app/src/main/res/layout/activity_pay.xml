<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".activity.PayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/dimen_8dp"
        >
        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:text="Total"
            android:textColor="@color/chef" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:text="Ksh: 950.00"
            android:textColor="@color/contact_name" />

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/datathumbnail3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle"
                android:clickable="true"
                android:tint="@color/white"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:padding="12dp"
                android:src="@drawable/ic_credit_card_black_24dp" />
            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/placeholder_bg"
                android:layout_below="@+id/datathumbnail3"
                />

            <TextView
                android:id="@+id/datatitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v"
                android:gravity="center"
                android:text="Credit Card Payment"
                android:padding="@dimen/activity_horizontal_margin"
                android:textStyle="bold"
                android:textColor="@color/chef"
                android:textSize="16sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_weight="2">




    <android.support.v7.widget.CardView
        android:id="@+id/cash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/card_margin"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/datathumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle2"
                android:clickable="true"
                android:tint="@color/white"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:padding="12dp"
                android:src="@drawable/ic_local_atm_black_24dp" />
            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/placeholder_bg"
                android:layout_below="@+id/datathumbnail"
                />
            <TextView
                android:id="@+id/datatitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v1"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Float"
                android:textStyle="bold"
                android:textColor="@color/chef"
                android:textSize="16sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/datathumbnail2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle3"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:clickable="true"
                android:tint="@color/white"
                android:padding="12dp"
                android:src="@drawable/ic_phone_android_black_24dp" />
            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/placeholder_bg"
                android:layout_below="@+id/datathumbnail2"
                />
            <TextView
                android:id="@+id/datatitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v2"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Mpesa Payment"
                android:textStyle="bold"
                android:textColor="@color/chef"
                android:textSize="16sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
