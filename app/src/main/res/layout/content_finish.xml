<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.FinishActivity"
    tools:showIn="@layout/activity_finish">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/datathumbnail3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle2"
                android:clickable="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:tint="@color/white"
                android:padding="12dp"
                android:src="@drawable/ic_local_atm_black_24dp" />
            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/placeholder_bg"
                android:layout_below="@+id/datathumbnail3"
                />
            <TextView
                android:id="@+id/datatitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Float"
                android:textStyle="bold"
                android:textColor="@color/chef"
                android:textSize="16sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >

        <EditText
            android:id="@+id/pay_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Cash amount" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total amount Ksh. :" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">
    <EditText
        android:id="@+id/paytt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_weight="3"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_sale"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_weight="1"
        android:padding="@dimen/dimen_8dp"
        android:drawableTint="@color/white"
        android:drawableRight="@drawable/ic_check_black_24dp"
        android:text="DONE" />
</LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>